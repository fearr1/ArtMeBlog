{% extends 'base.html.twig' %}

{% block main %}
<div class="container body-content">
    <div class="row">
        {% for article in articles %}
        <div class="col-md-6">
            <article>
                <header>
                    <h2 style="width:300px">{{ article.title }}</h2>
                </header>

                <p>
                    {{ article.summary }}
                </p>

                <small class="author">
                    {{ article.author }}
                </small>

                <footer>

                    <div class="pull-right">
                        <a
                           href="#"><strong>Read more &raquo;</strong></a>
                    </div>

                </footer>
            </article>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

