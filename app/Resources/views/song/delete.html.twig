{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well" style="background-color: #80efd2">

            <form method="post" action="{{ path('song_delete', {id: song.id}) }}" class="form-horizontal">
                <div class="form-group">
                    <label class="hidden" for="song_description">description: </label>
                    <input class="hidden" type="text" id="song_description" name="song[description]"
                           value="{{ song.description }}" readonly>
                    <h3 class="col-sm-6 col-sm-offset-3" style="word-wrap: break-word">
                        <strong>Description: </strong> {{ song.description }}</h3>
                </div>
                {{ form_row(form._token) }}

                <audio controls class="col-sm-6 col-sm-offset-3 img-responsive"
                       style="margin-bottom: 20px; margin-top: 40px">
                    <source src="{{ asset('uploads/songs/' ~ song.songName) }}">
                </audio>

                <div class="form-group">
                    <div class="col-sm-3 col-sm-offset-5">
                        <a class="btn btn-default" style="border-color: #128f76" href="{{ path('songs_show_all') }}">Cancel</a>
                        <button type="submit" style="border-color: #128f76" class="btn btn-danger">Delete</button>

                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}