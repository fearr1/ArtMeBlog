{% extends 'base.html.twig' %}

{% block main %}


    <div class="container body-content">
        <div class="form-group-sm" >
            <h1 style="margin-bottom: 50px">All songs: </h1>

            {% for song in songs %}
                <div class="col-sm-6" style="border:1px solid lightgray; border-radius:10px; max-height: 170px; max-width: 550px; margin-bottom:1px; margin-left: 1px">

                        <h3 class="text-center" style="word-wrap: break-word"><strong> {{ song.description }} </strong></h3>
                    {% if app.getUser and (app.getUser.isAuthorSong(song)) %}
                        <a class="btn btn-danger btn-xs " style="border-color: #128f76" href="{{ path('song_delete', {id: song.id}) }}">delete</a>
                    {% endif %}

                        <audio controls preload="auto" class="col-sm-10 img-responsive" style="margin-bottom: 20px; margin-top: 40px">
                            <source src="{{ asset('uploads/songs/' ~ song.songName) }}">
                        </audio>


                         <footer class="text-center">
                             <small class="author col-sm-6" style="word-wrap: break-word">
                                by: {{ song.author }}
                            </small>
                        </footer>

                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

